<div class="d-flex">
  <div>
    <%= render "shared/sidebar" %>
  </div>

  <div class="w-100">
    <!-- ModaL div for render new partial-->
    <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
    </div>

    <div class="d-flex">
      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column mt-4 col-lg-9">
        <section class="jumbotron text-center ml-2">
          <div class="container">
            <div>
              <h1 class="jumbotron-heading">Propriedades Cadastradas</h1>
              <p class="lead text-muted"></p>
              <%= link_to ' Criar nova propriedade', new_property_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :class => "btn btn-md btn-outline-secondary favorite-btn" }  %>
            </div>
          </div>
        </section>

        <div class="ml-2">
          <% if @properties.present? %>
            <%= render  "properties" %>
          <% else %>
            <div class="p-5 text-center"><h5>Nenhuma propriedade cadastrada.</h5></div>
          <% end %>
        </div>
      </div>

      <div class="mt-4">
        <%= render "ownerships/index" %>
      </div>
    </div>

  </div>