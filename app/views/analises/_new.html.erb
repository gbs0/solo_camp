<% if current_page?(controller: 'analises', action: 'index') %>
  <h4><strong>Selecione uma propriedade p/ poder cadastrar nova análise de solo</strong></h4>
<% end %>

<% if current_page?(controller: 'analises', action: 'new') %>
  <div class="container">
    <%= simple_form_for @analise do |f| %>
      
      <div class="">
        <strong><h5 class="modal-title"><strong>Cadastrar nova análse de solo:</strong></h5></strong>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="">
        <div class="form-row">
          <div class="col-md-12 mb-3">
            <div class="d-block col-md-12 p-0"><h6><strong>Nome do Proprietário da Análise</strong></h6></div>
            <%= f.input :ownership, label: false, error: 'Nome do Proprietário obrigatório.', collection: @ownerships, include_blank: false %>
          </div>
        </div>
        
        <div class="form-row">
          <div class="col-md-12 mb-3">
            <div class="d-block col-md-12 p-0"><h6><strong>Propriedade que a Amostra foi coletada</strong></h6></div>
            <%= f.input :property, label: false, error: 'Nome do Proprietário obrigatório.', collection: @property, include_blank: false %>
          </div>
        </div>
        
        <div class="form-row text-center">
          <h5>Adicione as amostras que fazem parte desta Análise:</h5>
          <%= render "analise_amostras/new" %>
        </div>

        <% if @amostras.present? %>
        <div class="modal-footer">
          <%= f.submit "Cadastrar Amostra",  class: 'btn btn-primary' %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        <% end %>
    <% end %>
  </div>
<% end %>
