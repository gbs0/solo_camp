<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center"><strong>Cadastre-se</strong></h5>
            
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-label-group field">
                <%= f.label :email  %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "Email address" %>
              </div>

              <div class="form-label-group field">
                <%= f.label :password %><br />
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", id: "inputPassword", class: "form-control" %>
              </div>

              <div class="form-label-group field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "inputPassword", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              </div>

              <hr class="my-4">
              <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>