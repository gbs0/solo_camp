<% if @property.errors.any? %>
$('#userModal .modal-content').html('<%= j render "ownerships/edit", property: @property %>');
$.toast({
    bgColor : '#900d3d',
    text : '<%= @error %>',
    position: "top-right",
    hideAfter: 5000,
    showHideTransition : 'slide'  // It can be plain, fade or slide
});
<% else %>
$.toast({
    bgColor : 'green',
    text : "Amostra editada com sucesso",
    position: "top-right",
    showHideTransition : 'slide'  // It can be plain, fade or slide
});
<% end %>
