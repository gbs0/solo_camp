<% if @error.present? %>
  $.toast({
      bgColor : '#900d3d',
      text : '<%= @error %>',
      position: "top-right",
      hideAfter: 5000,
      showHideTransition : 'slide'  // It can be plain, fade or slide
  });
<% else %>
$.toast({
    bgColor : 'green',
    text : "Amostra excluida com sucesso",
    position: "top-right",
    showHideTransition : 'slide'  // It can be plain, fade or slide
});
<% end %>
