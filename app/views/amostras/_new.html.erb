<%= simple_form_for amostra, remote: true do |f| %>
  <div class="modal-header">
    <strong><h5 class="modal-title">Cadastrar nova amostra de solo:</h5></strong>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
      <%= f.input :owner_name, label: 'Nome do Proprietário da Amostra', error: 'Nome do Proprietário obrigatório.', :collection => ownerships, :include_blank => false %>
      <%#= f.collection :property_name, label: 'Nome do Proprietário da Amostra', error: 'Nome do Proprietário obrigatório.', collection: ownerships %>
      <%= f.input :peso, label: 'Peso em gramas da amostra coletada:' %>
      <%= f.input :argila, placeholder: '00.0%', label: 'Quantidade de Argila (%)'  %>
      <%= f.input :potassio, placeholder: '00.0%', label: 'Quantidade de Potassio (%)'  %>
      <%= f.input :potassio, placeholder: '00.0%', label: 'Quantidade de Calcário (%)'  %>
      <%= f.input :magnesio, placeholder: '00.0%', label: 'Quantidade de Magnésio (%)'  %>
      <%= f.input :enxofre20, placeholder: '00.0%', label: 'Nivel de Enxofre 0 - 20 (%)'  %>
      <%= f.input :enxofre40, placeholder: '00.0%', label: 'Nivel de Enxofre 20 - 40 (%)'  %>
      <%= f.input :hidrogenio, placeholder: '00.0%', label: 'Nivel de Hidrogênio (%)'  %>
      <%= f.input :alcalinidade, placeholder: '00.0%', label: 'Nivel de Alcalinidade do Solo (%)'  %>
      <%= f.input :boro, placeholder: '00.0%', label: 'Nivel de Boro (%)'  %>
      <%= f.input :cobre, placeholder: '00.0%', label: 'Nivel de Cobre (%)'  %>
      <%= f.input :manganes, placeholder: '00.0%', label: 'Nivel de Manganês (%)'  %>

      
      
      
      
  </div>
  <div class="modal-footer">
    <%= f.submit "Cadastrar Amostra",  class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  </div>
<% end %>